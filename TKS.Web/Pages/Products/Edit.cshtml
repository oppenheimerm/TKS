@page
@model TKS.Web.Pages.Products.EditModel

@{
    ViewData["Title"] = "Edit";
}

<section class="section" id="products_edit">
    <div class="container flex">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <fieldset class="field__set">
                <legend class="form__legend">Edit product</legend>
                
                <div class="form__margin">
                    <label asp-for="Product.Description" class="control-label"></label>
                    <input asp-for="Product.Description" class="form__input" placeholder="description" aria-label="product description" />
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>

                <div class="form__margin">
                    <label asp-for="Product.Title" class="control-label"></label>
                    <input asp-for="Product.Title" class="form__input" placeholder="Title" aria-label="product title" />
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>

                <div class="form__margin">
                    <input type="submit" valuse="SUBMIT" class="btn btn__default form__button" />
                </div>

            </fieldset>
        </form>
        <br />
        <div>
            <a asp-page="./Index">Back to List</a>
        </div>
    </div>

</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
